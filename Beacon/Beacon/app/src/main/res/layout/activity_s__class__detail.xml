<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".S_Class_Detail">

    <ImageView
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src = "@drawable/dongguk"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_marginTop="40dp"
        android:id="@+id/classname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text = "과목명"
        android:gravity="center"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@+id/topbar"
        android:textSize="30dp">
    </TextView>

    <ScrollView
        android:id="@+id/attd_info"
        app:layout_constraintTop_toBottomOf="@+id/classname"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal|vertical"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:scrollbarStyle="outsideInset"
        android:fillViewport="true">
        <HorizontalScrollView
            android:layout_height="wrap_content"
            android:scrollbars="horizontal|vertical"
            android:layout_width="wrap_content"
            android:layout_marginTop="5dip">

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/s_class_detail_table" >
                <View
                    android:layout_height="3dp"
                    android:layout_width="match_parent"
                    android:background="#FFAE90">
                </View>
                <TableRow>
                    <TextView
                        android:text="1주차"
                        android:textSize="20dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center">
                    </TextView>
                    <TextView
                        android:text="2주차"
                        android:textSize="20dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center">
                    </TextView>
                    <TextView
                        android:text="3주차"
                        android:textSize="20dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center">
                    </TextView>
                    <TextView
                        android:text="4주차"
                        android:textSize="20dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center">
                    </TextView>
                    <TextView
                        android:text="5주차"
                        android:textSize="20dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center">
                    </TextView>
                    <TextView
                        android:text="6주차"
                        android:textSize="20dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center">
                    </TextView>
                    <TextView
                        android:text="7주차"
                        android:textSize="20dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center">
                    </TextView>
                    <TextView
                        android:text="8주차"
                        android:textSize="20dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center">
                    </TextView>
                    <TextView
                        android:text="9주차"
                        android:textSize="20dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center">
                    </TextView>
                    <TextView
                        android:text="10주차"
                        android:textSize="20dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center">
                    </TextView>
                    <TextView
                        android:text="11주차"
                        android:textSize="20dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center">
                    </TextView>
                    <TextView
                        android:text="12주차"
                        android:textSize="20dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center">
                    </TextView>
                    <TextView
                        android:text="13주차"
                        android:textSize="20dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center">
                    </TextView>
                    <TextView
                        android:text="14주차"
                        android:textSize="20dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center">
                    </TextView>
                    <TextView
                        android:text="15주차"
                        android:textSize="20dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center">
                    </TextView>
                </TableRow>

                <View
                    android:layout_height="1dp"
                    android:layout_width="match_parent"
                    android:background="#FFB1A4">
                </View>
            </TableLayout>
        </HorizontalScrollView>
    </ScrollView>
    <View
        android:id="@+id/last"
        app:layout_constraintTop_toBottomOf="@+id/attd_info"
        android:layout_height="3dp"
        android:layout_width="match_parent"
        android:background="#FFAE90"
        android:layout_marginBottom="80dp"
        >
    </View>

    <TextView
        android:id="@+id/title"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/last"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text = "KEEP IN MIND"
        android:textColor="#000000"
        android:textSize="30dp"
        android:layout_marginLeft="20dp"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/title">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text = "HomeWork#4 6/17">
        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text = "UI/UX 설계서 6/24"></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text = "상세 설계서 6/24"></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text = "중간고사 6/26"></TextView>
